{
  "$schema": "https://json-schema.org/schema",
  "name": "ddd",
  "version": "0.0.1",
  "generators": {
    "init": {
      "factory": "./src/generators/init/generator",
      "schema": "./src/generators/init/schema.json",
      "description": "Configure global options and ESLint rules",
      "aliases": ["ng-add"],
      "hidden": true
    },
    "library": {
      "factory": "./src/generators/library/generator",
      "schema": "./src/generators/library/schema.json",
      "description": "Create a DDD library"
    }
  },
  "schematics": {
    "init": {
      "factory": "./src/generators/init/schematic",
      "schema": "./src/generators/init/schema.json",
      "description": "Configure global options and ESLint rules",
      "aliases": ["ng-add"],
      "hidden": true
    },
    "library": {
      "factory": "./src/generators/library/schematic",
      "schema": "./src/generators/library/schema.json",
      "description": "Create a DDD library"
    }
  }
}
